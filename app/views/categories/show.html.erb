<%= render "shared/content_title", title: @category.name %>

<%= link_to "New Subcategory for #{@category.name}", new_category_subcategory_path(@category), class: "button tiny radius" %>

<hr>
<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
  <% @category.subcategories.each do |subcat| %>
    <li>
      <strong><%= subcat.name %></strong>
      <br>
      <%= link_to edit_category_subcategory_path(@category, subcat), class: "button tiny radius warning" do %>
      <i class="fi-pencil"></i>
      <% end %>
      <br>
      <%= link_to "New Exercise for #{subcat.name}", new_category_subcategory_exercise_path(@category, subcat), class: "button tiny radius" %>
      <% unless subcat.exercises.empty? %>
        <table>
          <thead>
            <tr>
              <th>Exercise Name</th>
              <th>Exercise Nickname</th>
              <th>Edit</th>
            </tr>
          </thead>
          <tbody>
            <% subcat.exercises.each do |exercise| %>
              <tr>
                <td><%= exercise.name %></td>
                <td><%= exercise.nickname%></td>
                <td><%= link_to "Edit", edit_category_subcategory_exercise_path(@category, subcat, exercise) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </li>
  <% end %>
</ul>