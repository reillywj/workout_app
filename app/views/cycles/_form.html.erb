<%= form_for [@user, @cycle] do |f| %>
  <%= render "shared/errors", object: @cycle %>
  <div class="row collapse">
    <div class="medium-6 columns">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="medium-2 medium-offset-1 columns">
      <%= f.label :start_date %>
      <%= f.date_field :start_date %>
    </div>
    <div class="medium-2 medium-offset-1 columns">
      <%= f.label :end_date %>
      <%= f.date_field :end_date %>
    </div>
  </div>
  <div class="row">
    <%= f.submit submit_text, class: "button radius centered large-6" %>
  </div>
<% end %>